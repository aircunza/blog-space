{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:e2e && npm run test:int",
    "test:acc:users": "NODE_ENV=test jest tests/contexts/users/infrastructure/acceptance --runInBand --verbose --forceExit",
    "test:e2e:auth": "NODE_ENV=test jest tests/contexts/auth/e2e --runInBand --verbose --forceExit",
    "test:e2e:posts": "NODE_ENV=test jest tests/contexts/posts/e2e --runInBand --verbose --forceExit",
    "test:e2e": "npm run test:e2e:users && npm test:e2e:auth",
    "test:e2e:users": "NODE_ENV=test jest tests/contexts/users/infrastructure --runInBand --verbose --forceExit",
    "test:e2e:coverage": "NODE_ENV=test jest --coverage --testRegex='.e2e.ts$' --coverageDirectory=./coverage_e2e --runInBand --detectOpenHandles",
    "test:unit": "npm run test:unit:posts",
    "test:unit:posts":"NODE_ENV=test jest tests/contexts/posts/unit --runInBand --verbose --forceExit",
    "test:unit:users": "NODE_ENV=test jest tests/contexts/users/application --runInBand --verbose --forceExit",
    "test:int": "npm run test:int:users",
    "test:int:users": "NODE_ENV=test jest tests/contexts/users/infrastructure/integration --runInBand --verbose --forceExit",
    "start:app:backend": "NODE_ENV=production node dist/src/apps/start",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "prepare": "cd .. && husky install 4-1-commit-hooks/.husky",
    "migration:generate:users": "npx sequelize-cli migration:generate --name create-users --migrations-path ./src/contexts/auth/infrastructure/persistence/sequelize/migrations",
    "db:create:users": "sequelize-cli db:create --config ./src/contexts/shared/infrastructure/persistence/sequelize/sequelize-cli-config.js",
    "migrate:users": "sequelize-cli db:migrate --migrations-path ./src/contexts/auth/infrastructure/persistence/sequelize/migrations --config ./src/contexts/shared/infrastructure/persistence/sequelize/sequelize-cli-config.js",
    "undo:users": "sequelize-cli db:migrate:undo --migrations-path ./src/contexts/auth/infrastructure/persistence/sequelize/migrations --config ./src/contexts/shared/infrastructure/persistence/sequelize/sequelize-cli-config.js",
    "undo:all:users": "sequelize-cli db:migrate:undo:all --migrations-path ./src/contexts/auth/infrastructure/persistence/sequelize/migrations --config ./src/contexts/shared/infrastructure/persistence/sequelize/sequelize-cli-config.js",
    "migrate:posts": "sequelize-cli db:migrate --migrations-path ./src/contexts/Posts/Posts/infrastructure/persistence/sequelize/migrations --config ./src/contexts/shared/infrastructure/persistence/sequelize/sequelize-cli-config.js"
    
    
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.5",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "node-dependency-injection": "^2.7.1",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.3",
    "uuid": "^11.1.0",
    "winston": "^3.3.3",
    "yaml": "^2.7.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/convict": "^6.1.6",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "0.0.48",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^16.10.2",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-editorconfig": "^4.0.2",
    "eslint-plugin-hexagonal-architecture": "^1.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "faker": "^5.5.3",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "11.2.0",
    "prettier": "^2.4.1",
    "sequelize-cli": "^6.6.3",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "description": ""
}
